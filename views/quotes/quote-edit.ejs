<% include ../partials/boilerplate %>

<form method='POST' action='/quotes/<%= data.id %>?_method=PUT'>
  <!-- passing id as a part of the body, but the input field is set to hidden, so not to render on the page -->
  <input name="id" type="hidden" value="<%= data.id %>">
  <input name='content' type='text' value='<%= data.content %>' />
  <input name='author' type='text' value='<%= data.author %>' />
  <label for='genre_id'> Genre
        <select name='genre_id' type='text'>
          <option value='1'>motivational</option>
          <option value='2'>comedy</option>
          <option value='3'>philosophical</option>
          <option value='4'>education</option>
          <option value='5'>design</option>
          <option value='6'>literary</option>
          <option value='7'>poetry</option>
          <option value="8">gonzo</option>
          <option value="9">misc</option>
        </select>
      </label></br>
  <input type='submit' value='Edit it!' />
</form>

<% include ../partials/footer %>
